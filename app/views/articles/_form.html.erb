<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>

	<% end %>
</ul>
<% end %>


<div class='row'>
	<div class="col-md-12">
		<%= form_for @article do |f| %>

			<div class="form-group row">
				<div class="control-label col-md-2 col-form-label">
					<%= f.label :title %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group row">
				<div class="control-label col-md-2 col-form-label">
					<%= f.label :description %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group row justify-content-end">
				<div class="col-md-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>	

		<% end %>
		<div style="text-align: center;">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>
	</div>
</div>