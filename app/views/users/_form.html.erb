<%= render 'shared/errors', obj: @user %>

<br>

<div class='row'>
	<div class="col-md-12">
		<%= form_for @user do |f| %>

			<div class="form-group row">
				<div class="control-label col-md-2 col-form-label">
					<%= f.label :username %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group row">
				<div class="control-label col-md-2 col-form-label">
					<%= f.label :email %>
				</div>
				<div class="col-md-8">
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
				</div>
			</div>

			<div class="form-group row">
				<div class="control-label col-md-2 col-form-label">
					<%= f.label :password %>
				</div>
				<div class="col-md-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group row justify-content-end">
				<div class="col-md-10">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
				</div>
			</div>	

		<% end %>
		<div style="text-align: center;">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>
	</div>
</div>